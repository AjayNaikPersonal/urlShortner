<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <div class="container">
        <form action="/api/v1" method="post">
            <label for="fullUrl"></label>
            <input type="text" placeholder="enter your url here..." class="form-control m-2" name="fullUrl" id="fullUrl">
            <button class="btn btn-primary" type="submit"> short it..</button>
        </form>
        <table class="table table-responsive table-stripped">
            <thead>
                <th>full url</th>
                <th>shorten url</th>
                <th>no of clicks</th>
            </thead>
            <tbody>
                <% urls.forEach(url => { %>
                    <tr>
                        <td><a href="<%= url.fullUrl %>"><%= url.fullUrl %></a></td>
                        <td><a href="/api/v1/<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
                        <td><%= url.clicks %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>